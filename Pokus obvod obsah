string[] tvary = new string[] { "ctverec", "obdelnik", "trojuhelnik", "kruh", "krychle", "kvadr", "kuzel" };


void VytisknoutPole(string[] pole)
{
    for (int i = 0; i < pole.Length; i++)
    {
        Console.WriteLine($"{i + 1}) {pole[i]}");
    }
}


double FinalniCislo()
{
    double CisloOdUzivatele;
    bool pravda;
    do
    {
        string TextOdUzivatele = Console.ReadLine();

        pravda = double.TryParse(TextOdUzivatele, out CisloOdUzivatele);
        if (!pravda)
        {
            Console.WriteLine("Napiste cislo!");
        }
        if (CisloOdUzivatele < 0)
        {
            Console.WriteLine("Napiste cislo vetsi nez 0");
        }
    } while (!pravda);

    return CisloOdUzivatele;

}

int VolbaInt()
{
    int CisloOdUzivatele;
    bool pravda;
    do
    {
        string TextOdUzivatele = Console.ReadLine();
        pravda = int.TryParse(TextOdUzivatele, out CisloOdUzivatele);
        if (!pravda)
        {
            Console.WriteLine("Napiste cislo z dane nabidky!");
        }
    } while (!pravda);

    return CisloOdUzivatele;

}




void ctverec()
{
    Console.WriteLine();
    double a = FinalniCislo();
    Console.WriteLine();

}


